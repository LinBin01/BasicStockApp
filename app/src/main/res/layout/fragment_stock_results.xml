<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iex_textView"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/iex_authorization"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/current_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toStartOf="@+id/current_stock_textView"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_purple" />

    <ImageView
        android:id="@+id/previous_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        app:layout_constraintBottom_toTopOf="@+id/previous_one_imageView"
        app:layout_constraintEnd_toEndOf="@+id/previous_one_imageView"
        app:layout_constraintStart_toStartOf="@+id/previous_one_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_purple" />

    <ImageView
        android:id="@+id/previous_three_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/previous_three_date_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous_two_imageView"
        app:srcCompat="@android:color/holo_purple" />

    <ImageView
        android:id="@+id/previous_one_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/previous_two_imageView"
        app:layout_constraintEnd_toEndOf="@+id/previous_two_imageView"
        app:layout_constraintStart_toStartOf="@+id/previous_two_imageView"
        app:layout_constraintTop_toBottomOf="@+id/previous_imageView"
        app:srcCompat="@android:color/holo_purple" />

    <ImageView
        android:id="@+id/previous_two_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/previous_three_imageView"
        app:layout_constraintEnd_toEndOf="@+id/previous_three_imageView"
        app:layout_constraintStart_toStartOf="@+id/previous_three_imageView"
        app:layout_constraintTop_toBottomOf="@+id/previous_one_imageView"
        app:srcCompat="@android:color/holo_purple" />

    <TextView
        android:id="@+id/current_stock_textView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_textView" />

    <TextView
        android:id="@+id/previous_percent_textView"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_percent_one_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_percent_one_textView"
        app:layout_constraintStart_toStartOf="@+id/previous_percent_one_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/previous_date_textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_one_date_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_one_date_textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/previous_one_date_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/previous_percent_one_textView"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_percent_two_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_percent_two_textView"
        app:layout_constraintStart_toStartOf="@+id/previous_percent_two_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_percent_textView" />

    <TextView
        android:id="@+id/previous_one_date_textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_two_date_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_two_date_textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/previous_two_date_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_date_textView" />

    <TextView
        android:id="@+id/previous_percent_two_textView"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_percent_three_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_percent_three_textView"
        app:layout_constraintStart_toStartOf="@+id/previous_percent_three_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_percent_one_textView" />

    <TextView
        android:id="@+id/previous_two_date_textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_three_date_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_three_date_textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/previous_three_date_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_one_date_textView" />

    <TextView
        android:id="@+id/previous_percent_three_textView"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/previous_stock_three_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_percent_two_textView" />

    <TextView
        android:id="@+id/previous_three_date_textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/previous_percent_three_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_two_date_textView" />

    <TextView
        android:id="@+id/previous_stock_textView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_stock_one_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_stock_one_textView"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/previous_stock_one_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/previous_stock_one_textView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_stock_two_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_stock_two_textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/previous_stock_two_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_stock_textView" />

    <TextView
        android:id="@+id/previous_stock_two_textView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/previous_stock_three_textView"
        app:layout_constraintEnd_toEndOf="@+id/previous_stock_three_textView"
        app:layout_constraintStart_toStartOf="@+id/previous_stock_three_textView"
        app:layout_constraintTop_toBottomOf="@+id/previous_stock_one_textView" />

    <TextView
        android:id="@+id/previous_stock_three_textView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous_stock_two_textView" />
</android.support.constraint.ConstraintLayout>